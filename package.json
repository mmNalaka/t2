{
	"name": "t2-notes",
	"version": "1.0.3",
	"description": "A beautiful terminal-based note-taking app with git-backed storage",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mmNalaka/t2.git"
	},
	"author": "Nalaka <https://github.com/mmNalaka>",
	"keywords": [
		"terminal",
		"notes",
		"git",
		"cli",
		"react",
		"ink"
	],
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@mishieck/ink-titled-box": "^0.3.0",
		"@types/marked-terminal": "^6.1.1",
		"cli-highlight": "^2.1.11",
		"ink": "^4.4.1",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-multi-select": "^2.0.0",
		"ink-select-input": "^6.2.0",
		"ink-text-input": "^6.0.0",
		"marked": "^17.0.1",
		"marked-terminal": "^7.3.0",
		"meow": "^11.0.0",
		"react": "^18.3.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^24.10.2",
		"@types/react": "^18.3.27",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.3.1",
		"chalk": "^5.6.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
